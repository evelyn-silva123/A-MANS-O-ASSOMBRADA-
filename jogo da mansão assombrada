    <script>
        // Estado do jogo
        let gameState = {
            health: 5,
            inventory: [],
            currentScreen: 'screen-start'
        };

        // Inicializar jogo
        function initGame() {
            updateHearts();
            updateInventory();
            showScreen('screen-start');
        }

        // Mostrar tela espec√≠fica
        function showScreen(screenId) {
            // Esconder todas as telas
            document.querySelectorAll('.screen').forEach(screen => {
                screen.classList.remove('active');
            });
            
            // Mostrar tela desejada
            document.getElementById(screenId).classList.add('active');
            gameState.currentScreen = screenId;
        }

        // Atualizar cora√ß√µes
        function updateHearts() {
            const heartsContainer = document.getElementById('hearts');
            heartsContainer.innerHTML = '';
            
            for (let i = 0; i < 5; i++) {
                const heart = document.createElement('div');
                heart.className = 'heart';
                heart.textContent = i < gameState.health ? '‚ù§Ô∏è' : 'üñ§';
                heartsContainer.appendChild(heart);
            }
        }

        // Atualizar invent√°rio
        function updateInventory() {
            const inventoryContainer = document.getElementById('inventory');
            inventoryContainer.innerHTML = '';
            
            gameState.inventory.forEach(item => {
                const itemElement = document.createElement('div');
                itemElement.className = 'inventory-item';
                itemElement.textContent = getItemIcon(item) + ' ' + item;
                inventoryContainer.appendChild(itemElement);
            });
        }

        // Obter √≠cone do item
        function getItemIcon(item) {
            const icons = {
                'lanterna': 'üî¶',
                'diario': 'üìñ',
                'chave': 'üóùÔ∏è',
                'amuleto': 'üìø'
            };
            return icons[item] || 'üì¶';
        }

        // Perder vida
        function loseHealth(amount, nextScreen) {
            gameState.health -= amount;
            updateHearts();
            
            if (gameState.health <= 0) {
                gameState.health = 0;
                showScreen('screen-bad-ending' + (Math.floor(Math.random() * 3) + 1));
            } else {
                showScreen(nextScreen);
            }
        }

        // Encontrar item
        function findItem(item, nextScreen) {
            if (!gameState.inventory.includes(item)) {
                gameState.inventory.push(item);
                updateInventory();
                
                // Mostrar mensagem de item encontrado
                alert(`üéâ Voc√™ encontrou: ${getItemIcon(item)} ${item.toUpperCase()}!`);
            }
            showScreen(nextScreen);
        }

        // Usar item
        function useItem(item, successScreen, failScreen) {
            if (gameState.inventory.includes(item)) {
                showScreen(successScreen);
            } else {
                showScreen(failScreen);
            }
        }

        // Reiniciar jogo
        function restartGame() {
            gameState = {
                health: 5,
                inventory: [],
                currentScreen: 'screen-start'
            };
            initGame();
        }

        // Iniciar o jogo quando a p√°gina carregar
        window.onload = initGame;
    </script>
</body>
</html>
